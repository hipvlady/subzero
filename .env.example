# Zero Trust AI Gateway Configuration

# Core Settings
ZTAG_PORT=8080
ZTAG_HOST=0.0.0.0
ZTAG_LOG_LEVEL=INFO

# Auth0 Configuration (Replace with your actual values)
ZTAG_AUTH0_DOMAIN=your-tenant.auth0.com
ZTAG_CLIENT_ID=your_client_id_here
ZTAG_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----"

# Auth0 FGA Configuration
ZTAG_FGA_API_URL=https://api.fga.dev
ZTAG_FGA_STORE_ID=your_fga_store_id

# AI Provider Settings
ZTAG_OPENAI_API_KEY=sk-your_openai_key_here
ZTAG_DEFAULT_MODEL=gpt-3.5-turbo

# Performance Settings
ZTAG_MAX_AGENTS_PER_USER=10
ZTAG_CONNECTION_POOL_SIZE=100
ZTAG_BATCH_SIZE=100
ZTAG_CACHE_SIZE=100000
ZTAG_REQUEST_TIMEOUT=30

# Security Settings
ZTAG_CONTENT_FILTERING=true
ZTAG_PROMPT_INJECTION_DETECTION=true
ZTAG_RATE_LIMIT_PER_MINUTE=100

# Monitoring Settings
ZTAG_METRICS_ENABLED=true
ZTAG_AUDIT_LOGGING=true

# Demo Settings (for hackathon demonstration)
ZTAG_DEMO_MODE=true
ZTAG_MOCK_AUTH=false