# Include core documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include CONTRIBUTORS.md
include SECURITY.md

# Include requirements
include requirements.txt

# Include all documentation
recursive-include docs *.md *.rst

# Include configuration examples
recursive-include config *.py *.yaml *.yml *.json

# Include deployment configurations
recursive-include etc *.yaml *.yml *.json *.conf *.sh

# Include examples
recursive-include examples *.py *.md

# Include type stubs for PEP 561 compliance
include subzero/py.typed

# Exclude unnecessary files
exclude .DS_Store
exclude .gitignore
exclude .gitattributes
exclude .dockerignore
exclude Dockerfile
exclude docker-compose.yml
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.pyc
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib
global-exclude .pytest_cache

# Exclude development and build artifacts
prune tests
prune scripts
prune archive
prune docs/build
prune .github
prune venv
prune .venv
prune *.egg-info
prune htmlcov