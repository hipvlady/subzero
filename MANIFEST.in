# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include SECURITY.md
include CLAUDE.md

# Include requirements
include requirements.txt

# Include configuration examples
include .env.example
recursive-include config *.py *.yaml *.yml *.json

# Include deployment configurations
recursive-include etc *.yaml *.yml *.json *.conf *.sh

# Include examples
recursive-include examples *.py *.md

# Include type stubs
include subzero/py.typed

# Exclude unnecessary files
exclude .DS_Store
exclude .gitignore
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib

# Exclude tests and scripts
prune tests
prune scripts
prune archive
prune docs/build